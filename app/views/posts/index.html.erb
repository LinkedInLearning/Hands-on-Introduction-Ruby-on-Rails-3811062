<div class="w-full">
  <% if notice.present? %>
    <div id="notice">
      <%= render "layouts/notice" %>
    </div>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "New post", new_post_path, data: { turbo_frame: dom_id(Post.new) }, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= turbo_frame_tag Post.new %>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
